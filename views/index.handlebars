<div>
<h1>Eat da Burger</h1>
<img src="/assets/img/burger.jpg" alt="burger pic" class = "burger">
</div>

<div class="wrapper">
    <div class="list">
        <h2>Burgers to eat</h2>

        <ul>
        {{#each burger}}
            {{#unless devoured}}
                <li>
                    {{burger_name}}
                    <button class="eat" data-id="{{id}}" data-devoured="{{devoured}}">Eat!</button>
                </li>   
            {{/unless}}
            {{/each}}
        </ul>
    </div>


    <div class="list">
        <h2>Burgers that have been enjoyed</h2>
        <ul>
        {{#each burger}}
            {{#if devoured}}
                <li id="eaten">{{burger_name}}</li>
            {{/if}}
        {{/each}}
        </ul>
    </div>

    <form class="create-form">
        <div class="form-group">
            
            <label for="name">
                <h2>Add a Burger</h2>
                Burger Name:</label>
            <input type="text" id="name" name="burger_name">
        
            <button type="submit">Add</button>
        </div>  
    </form>
</div>